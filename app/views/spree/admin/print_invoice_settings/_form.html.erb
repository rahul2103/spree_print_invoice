<div class="card mb-3">
  <div class="card-header">
    <h5 class="card-title mb-0 h6">
      <%= Spree.t(:pdf_legend, scope: :print_invoice) %>
    </h5>
  </div>

  <div class="card-body">
    <div class="row">
      <div class="col-12 col-lg-6">
        <div class="form-group">
          <%= f.field_container :use_page_numbers do %>
            <%= f.check_box :use_page_numbers %>
            <%= f.label :use_page_numbers, Spree.t(:use_page_numbers, scope: [:print_invoice, :preferences]) %>
            <%= f.error_message_on :use_page_numbers %>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.field_container :font_size do %>
            <%= f.label :font_size, Spree.t(:font_size, scope: [:print_invoice, :preferences]) %>
            <%= f.select :font_size, options_for_select(@print_invoice_setting.font_sizes.map(&:to_s), @print_invoice_setting.font_size), {}, class: 'select2' %>
            <%= f.error_message_on :font_size %>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.field_container :page_size do %>
            <%= f.label :page_size, Spree.t(:page_size, scope: [:print_invoice, :preferences]) %>
            <%= f.select :page_size, options_for_select(@print_invoice_setting.page_sizes, @print_invoice_setting.page_size), {}, class: 'select2' %>
            <%= f.error_message_on :page_size %>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.field_container :font_face do %>
            <%= f.label :font_face, Spree.t(:font_face, scope: [:print_invoice, :preferences]) %>
            <%= f.select :font_face, options_for_select(@print_invoice_setting.font_faces, @print_invoice_setting.font_face), {}, class: 'select2' %>
            <%= f.error_message_on :font_face %>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.field_container :page_layout do %>
            <%= f.label :page_layout, Spree.t(:page_layout, scope: [:print_invoice, :preferences]) %>
            <%= f.select :page_layout, options_for_select(@print_invoice_setting.page_layouts, @print_invoice_setting.page_layout), {}, class: 'select2' %>
            <%= f.error_message_on :page_layout %>
          <% end %>
        </div>
      </div>

      <div class="col-12 col-lg-6">

        <div class="form-group">
          <%= f.field_container :store_pdf do %>
            <%= f.check_box :store_pdf %>
            <%= f.label :store_pdf, Spree.t(:store_pdf, scope: [:print_invoice, :preferences]) %>
            <%= f.error_message_on :store_pdf %>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.field_container :storage_path do %>
            <%= f.label :storage_path, Spree.t(:storage_path, scope: [:print_invoice, :preferences]) %>
            <%= f.text_field :storage_path, class: 'form-control', disabled: !@print_invoice_setting.store_pdf %>
            <%= f.error_message_on :storage_path %>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.field_container :next_number do %>
            <%= f.label :next_number, Spree.t(:next_number, scope: [:print_invoice, :preferences]) %>
            <%= f.number_field :next_number, class: 'form-control' %>
            <%= f.error_message_on :next_number %>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.field_container :logo_path do %>
            <%= f.label :logo_path, Spree.t(:logo_path, scope: [:print_invoice, :preferences]) %>
            <%= f.text_field :logo_path, class: 'form-control' %>
            <%= f.error_message_on :logo_path %>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.field_container :logo_scale do %>
            <%= f.label :logo_scale, Spree.t(:logo_scale, scope: [:print_invoice, :preferences]) %>
            <%= f.number_field :logo_scale, in: 1...101, class: 'form-control' %>
            <%= f.error_message_on :logo_scale %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

